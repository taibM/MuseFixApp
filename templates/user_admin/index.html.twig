                            </td>
 {% for user in users %}
            <tr>
                <td>{{ user.userid }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.passwd }}</td>
                <td>{{ user.signupdate ? user.signupdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.tel }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'userid': user.userid}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'userid': user.userid}) }}">edit</a>
                </td>
            </tr>

                            {% else %}
                                <tr>
